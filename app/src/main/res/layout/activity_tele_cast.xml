<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sur_exit"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/live_exit"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="  "/>

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/livestart_btn_photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sur_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="写个直播标题吧"
                android:layout_weight="2"
                android:textColorHint="@color/white"/>
            <Button
                android:id="@+id/sur_replace"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/follow_time_bg"
                android:textColor="@color/white"
                android:text="更换封面"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/white"
            android:text="同步分享到"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sur_fr"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@mipmap/livestart_share4"/>

            <ImageView
                android:id="@+id/sur_fr_click"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share4_click"/>

            <ImageView
                android:id="@+id/sur_zome"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share2"/>
            <ImageView
                android:id="@+id/sur_zome_click"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share2_click"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/sur_qq"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share3"/>
            <ImageView
                android:id="@+id/sur_qq_click"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share3_click"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/sur_wx"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share1"/>
            <ImageView
                android:id="@+id/sur_wx_click"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@mipmap/livestart_share1_click"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical">

            <Button
                android:id="@+id/sur_live"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/live_end_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:text="我要直播"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
