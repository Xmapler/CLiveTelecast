<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:background="#FFDB45"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_weight="1"
            android:src="@mipmap/top_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="#7F4E34"
            android:text="手机登录"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="  "/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/phoneName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#7F4E34"
                    android:textColor="#7F4E34"
                    android:singleLine="true"
                    android:phoneNumber="true"
                    android:inputType="phone"
                    android:drawableLeft="@mipmap/login_username_normal"
                    android:drawablePadding="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:maxLength="11"
                    android:digits="0123456789"
                    android:paddingLeft="@dimen/dp_10"
                    android:hint="请输入手机号"/>


                <EditText
                    android:id="@+id/phonePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#7F4E34"
                    android:textColor="#7F4E34"
                    android:singleLine="true"
                    android:password="true"
                    android:drawableLeft="@mipmap/login_password_normal"
                    android:drawablePadding="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:hint="请输入密码"/>


            <Button
                android:id="@+id/phone_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:textColor="#7F4E34"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@mipmap/phone_loginbtnbg"
                android:text="登录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#A2A2A2"
                android:text="账号注册>>"/>

            <TextView
                android:id="@+id/phone_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_150"
                android:textColor="#A2A2A2"
                android:text="忘记密码?"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"
                    android:textColor="#B7B7B7"
                    android:text="选择登录方式"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Qq"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:src="@mipmap/login_qq"/>

                    <ImageView
                        android:id="@+id/WeiX"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:src="@mipmap/login_weixin"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

</LinearLayout>
